{
    "name": "gritzkoo/php-health-checker",
    "description": "Simple package to health-check",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "K8s\\HealthChecker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "K8s\\HealthCheckerTests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Gritzko D. Kleiner",
            "email": "gritzkoo@hotmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": [
            "phpunit --testdox --color"
        ],
        "coverage": [
            "rm -rf coverage .phpunit.cache && mkdir coverage && XDEBUG_MODE=coverage phpunit --coverage-html coverage --testdox --color"
        ],
        "coveralls": [
            "XDEBUG_MODE=coverage phpunit --coverage-clover=coverage/clover.xml --testdox --color"
        ]
    }
}
